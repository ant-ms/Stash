{
	"name": "tv-client",
	"private": true,
	"version": "0.0.1",
	"description": "A client for Stash",
	"author": "Yanik",
	"license": "MIT",
	"type": "module",
	"main": "main.js",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"start": "electron .",
		"dist:linux-unpacked": "vite build && electron-builder --linux --dir"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"electron": "^39.2.7",
		"electron-builder": "^26.0.12",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"sass-embedded": "^1.97.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"wait-on": "^9.0.3"
	},
	"dependencies": {
		"@mdi/js": "^7.4.47",
		"runed": "^0.37.0"
	},
	"build": {
		"appId": "com.example.tvclient",
		"productName": "TV Client",
		"files": [
			"build/**/*",
			"main.js",
			"package.json",
			"logo.png"
		],
		"directories": {
			"output": "dist"
		},
		"linux": {
			"target": "flatpak",
			"category": "Utility",
			"icon": "logo.png"
		},
		"flatpak": {
			"runtimeVersion": "23.08",
			"sdk": "org.freedesktop.Sdk"
		}
	}
}
